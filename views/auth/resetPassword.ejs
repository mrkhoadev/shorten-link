<div class="container py-5">
    <h1 class="text-center">Đặt lại mật khẩu</h1>
    <div class="mx-auto" style="max-width: 400px;">
        <% if (req?.msg) { %>
          <div class="alert alert-success text-center mb-2" role="alert">
            <%= req?.msg %>
          </div>
        <% } %>
        <% if (req?.error) { %>
          <div class="alert alert-danger text-center mb-2" role="alert">
            <%= req?.error %>
          </div>
        <% } %>
    </div>
    <form class="mx-auto" style="max-width: 400px;" method="POST">
      <div class="mb-3">
        <label for="exampleInputPassword" class="form-label">Mật khẩu mới</label>
        <input 
          type="password" 
          name="password" 
          value="<%= req?.old?.password %>" 
          placeholder="Nhập mật khẩu mới..." 
          class="form-control" 
          id="exampleInputPassword" 
        >
        <span class="text-danger"><%= req?.errors?.password %></span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword" class="form-label">Nhập lại mật khẩu</label>
        <input 
          type="password" 
          name="rePassword" 
          value="<%= req?.old?.rePassword %>" 
          placeholder="Nhập lại mật khẩu..." 
          class="form-control" 
          id="exampleInputRePassword" 
        >
        <span class="text-danger"><%= req?.errors?.rePassword %></span>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%;">Gửi</button>
      <div class="form-text pt-2 text-center"><a href="/auth/login">Đăng nhập</a></div>
    </form>
  </div>