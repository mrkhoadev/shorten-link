<div class="container py-5">
    <h1 class="text-center">Quên mật khẩu</h1>
    <div class="mx-auto" style="max-width: 400px;">
        <% if (req?.msg) { %>
          <div class="alert alert-success text-center mb-2" role="alert">
            <%= req?.msg %>
          </div>
        <% } %>
        <% if (req?.error) { %>
          <div class="alert alert-danger text-center mb-2" role="alert">
            <%= req?.error %>
          </div>
        <% } %>
    </div>
    <form class="mx-auto" style="max-width: 400px;" method="POST">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input 
          type="text" 
          name="email" 
          value="<%= req?.old?.email %>" 
          placeholder="Email..." 
          class="form-control" 
          id="exampleInputEmail1" 
          aria-describedby="emailHelp"
        >
        <span class="text-danger"><%= req?.errors?.email %></span>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%;">Gửi</button>
      <div class="form-text pt-2">Quay lại? <a href="/auth/login">Đăng nhập</a></div>
    </form>
  </div>